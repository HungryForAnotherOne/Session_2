<Window x:Class="WpfApp1.Windows.PravaAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Windows"
        mc:Ignorable="d"
        Title="PravaAdmin" Height="450" Width="800">
    <Grid>
        <DataGrid HorizontalAlignment="Left" Name="Prava" Height="420" Margin="270,0,0,0" VerticalAlignment="Top" Width="522"/>
        <Button Content="Создать" HorizontalAlignment="Left" Margin="85,30,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="85,100,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Обновить" HorizontalAlignment="Left" Margin="85,170,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
        <Button Content="Изменить" HorizontalAlignment="Left" Margin="85,240,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_3"/>
        <Button Content="Выход" HorizontalAlignment="Left" Margin="10,376,0,0" VerticalAlignment="Top" Width="111" Height="34" Click="Button_Click_4"/>
        <ComboBox HorizontalAlignment="Left" Name="Typi" Margin="150,0,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Typi_SelectionChanged"/>

    </Grid>
</Window>
